<div class="row">
  <div class="col s12 m12 l6 offset-l3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <%= image_tag(choose_img) %>
        <span class="friend-name"><%= friend.name %></span>
        <span class="right game-count">Game Count:  <%= friend.games.count %></span>
      </div>
      <form class="card-content" action="/users/<%= current_user.id %>/friends" method="post">
        <input type="hidden" name="_method" value="delete">
        <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
        <input type="hidden" name="friend[friend_id]" value="<%= friend.id %>"></input>
        <a class="waves-effect waves-light btn blue-grey darken-4" href="/users/<%= friend.id %>/games">see friend's games</a></button>
        <button class="waves-effect waves-light btn blue-grey darken-4 right" type="submit" name="delete">remove friend</button>
      </form>
    </div>
  </div>
</div>
