<h3 class="center-align">Edit your account details below:</h3>
<div class="row">
  <form class="col s12 offset-s3 id="user-update" action="/users/<%= @user.id %>" method="POST"">
    <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
    <div class="row">
      <div class="input-field col s6">
        <input id="name" name="user[name]" type="text" class="validate" value="<%= @user.name %>">
        <label class="active" for="name">Name</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input id="username" name="user[username]" type="text" class="validate" value="<%= @user.username %>">
        <label class="active" for="username">Username</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input id="email" name="user[email]" type="email" class="validate" value="<%= @user.email %>">
        <label class="active" for="email">Email</label>
      </div>
    </div>
    <div class="row">
      <button class="btn waves-effect waves-light" type="submit" name="create">Update
        <i class="material-icons">send</i>
      </button>
    </div>
  </form>
</div>
