<h1 class="center-align"><%= @user.name %>'s Dashboard</h1>
<div class="row">
  <div class="col s6 m3 l3 offset-l3">
    <p><a href="/users/<%= @user.id %>/edit">Edit my Profile</a></p>
  </div>
</div>
<div class="row">
  <div class="col s12 m6 l6 offset-l3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">My Games</span>
        <p>
          <ul>
            <% @user.games.each do |game| %>
              <li><a href="/games/<%= game.id %>"><%= game.name %></a></li>
            <% end %>
          </ul>
        </p>
      </div>
      <div class="card-action">
        <a href="/users/<%= @user.id %>/games">Show my games</a>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col s12 m6 l6 offset-l3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">My Friends' Games</span>
        <p>Stretch Task - Show top 5 games</p>
      </div>
      <div class="card-action">
        <a href="#">Show my friends' games</a>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col s12 m6 l6 offset-l3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">All Games</span>
        <p>Stretch Task - Show top 5 games</p>
      </div>
      <div class="card-action">
        <a href="/games/">Show all games</a>
      </div>
    </div>
  </div>
</div>
