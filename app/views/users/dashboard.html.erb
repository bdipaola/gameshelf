<h1 class="center-align"><%= @user.name %>'s Dashboard</h1>
<div class="row">
  <div class="col s6 m3 l3 offset-l3">
    <p><a href="/users/<%= @user.id %>/edit">Edit my Profile</a></p>
  </div>
</div>
<div class="row">
  <div class="col s12 m6 l6 offset-l3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">My Games</span>
      </div>
      <div class="card-action">
        <a href="/users/<%= @user.id %>/games">Show my games</a>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col s12 m6 l6 offset-l3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">All Games</span>
      </div>
      <div class="card-action">
        <a href="/games/">Show all games</a>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col s12 m6 l6 offset-l3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">My Friends</span>
      </div>
      <div class="card-action">
        <a href="/users/<%= @user.id %>/friends">Show my friends</a>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col s12 m6 l6 offset-l3">
    <div class="card blue-grey darken-1">
      <form action="/users/<%= current_user.id %>/add_friend" method="post">
        <input type="hidden" name="_method" value="put">
        <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
        <label for="user[username]">Friend username:</label>
        <input type="text" name="user[username]"></input>
        <input type="submit" value="Add Friend">
      </form>
    </div>
  </div>
</div>
