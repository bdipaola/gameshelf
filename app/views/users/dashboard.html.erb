<h1 class="center-align"><%= @user.name %>'s Dashboard</h1>
<div class="row">
  <div class="col s6 m3 l3 offset-l3">
    <p><a href="/users/<%= @user.id %>/edit">Edit my Profile</a></p>
  </div>
</div>
<div class="row">
  <div class="col s12 m6 l6 offset-l3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">My Games</span>
      </div>
      <div class="card-action">
        <a href="/users/<%= @user.id %>/games">Show my games</a>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col s12 m6 l6 offset-l3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">All Games</span>
      </div>
      <div class="card-action">
        <a href="/games/">Show all games</a>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col s12 m6 l6 offset-l3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">My Friends</span>
      </div>
      <div class="card-action">
        <a href="/users/<%= @user.id %>/friends">Show my friends</a>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col s12 m6 l6 offset-l3">
    <div class="card blue-grey darken-1">
      <form class="card-content" action="/users/<%= current_user.id %>/add_friend" method="post">
        <div class="col l10">
          <input type="hidden" name="_method" value="put">
          <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
          <label class="card-title friend-username" for="user[username]">Add a Friend! Enter their username below.</label>
          <input type="text" name="user[username]"></input>
        </div>
        <div class="col l2 add-friend">
          <button class="btn-floating btn-large waves-effect waves-light deep-orange darken-4" type="submit" name="add"><i class="material-icons">add</i></button>
        </div>
      </form>
    </div>
  </div>
</div>
