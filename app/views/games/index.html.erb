<% current_uri = request.env['PATH_INFO'] %>

  <% if current_uri == "/games" || current_uri == "/" %>
    <h1 class="center-align">GameShelf Games</h1>
  <% else  %>
    <h1 class="center-align">My Games</h1>
  <% end %>

<%= render partial: "categories/dropdown" %>
<% @games.each do |game| %>
  <%= render partial: "games/game", locals: {game: game} %>
<% end %>

