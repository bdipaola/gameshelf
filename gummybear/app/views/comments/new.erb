<form action="/games/<%= @game.id %>/comments" method="post">
	<%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
  <label for="comment[content]">Comment:</label>
  <input type="text" name="comment[content]"></input>
    <input type="hidden" name="comment[game_id]" value="<%= @game.id %>"></input>
  <input type="submit" value="Add Comment">
</form>

<% if @comment.errors.any? %>
	<p class="red-text">Unable to add comment. Please try again.</p>
<% end %>

